# =============================================================================
# School ID Automation System - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment.
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=school_id_system
DB_POOL_SIZE=5

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Maximum upload sizes (in bytes)
MAX_UPLOAD_SIZE=10485760

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Set to "production" in production
ENVIRONMENT=development

# Debug mode (shows /docs and /redoc endpoints)
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Path Configuration
# -----------------------------------------------------------------------------
# These have sensible defaults, override only if needed
# DATA_DIR=data
# INPUT_DIR=data/input
# OUTPUT_DIR=data/output
# TEMPLATE_DIR=data/Templates
# PRINT_SHEETS_DIR=data/Print_Sheets
# LAYOUT_FILE=data/layout.json
# SETTINGS_FILE=data/settings.json

# -----------------------------------------------------------------------------
# Image Processing
# -----------------------------------------------------------------------------
# Enhance photos with GFPGAN
ENABLE_ENHANCEMENT=true

# Target face detection area
FACE_PADDING=0.2

# Output image dimensions
OUTPUT_WIDTH=400
OUTPUT_HEIGHT=500

# JPEG quality for output (1-100)
OUTPUT_QUALITY=95
